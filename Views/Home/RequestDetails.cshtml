@model Listing

@{
    Layout = "_BasicLayout";
    ViewBag.Title = Model.Name;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Controllers and Actions</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
    <body>
        <h2 style="font-weight: bold; margin-bottom: 30px;">Listing Details</h2>
        <div style="font-size: 13px;"> 
                <div class="form-group form-label">
                    <label style="font-weight: bold;">Id: </label>
                    @Model.Id
                </div>
                <div class="form-group form-label ">
                    <label style="font-weight: bold;">Name: </label>
                    @Model.Name
                </div>
                <div class="form-group form-label">
                    <label style="font-weight: bold;">Phone: </label>
                    @Model.Phone
                </div>
                <div class="form-group form-label">
                    <label style="font-weight: bold;">Email: </label>
                    @Model.Email
                </div>
                <div class="form-group form-label">
                    <label style="font-weight: bold;">Role: </label>
                    @Model.Role
                </div>
                <div class="form-group form-label">
                    <label style="font-weight: bold;">Equipment: </label>
                    @Model.Equipment
                </div>
                <div>
                    <button class="btn btn-primary center-block spacing" type="submit">Accept</button>
                    <button class="btn btn-primary center-block spacing" type="submit">Deny</button>
                </div>
        </div>

        
    </body>
</html>



