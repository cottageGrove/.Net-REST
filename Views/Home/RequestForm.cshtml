
@model PartyInvites.Models.Listing


@{
    Layout = "_BasicLayout";
    ViewData["Title"] = "Home Page";
}





<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Controllers and Actions</title>
    <link rel="stylesheet" href="/lib/bootstrap/dist/css/bootstrap.css" />
</head>
<body class="m-1 p-1">
    <h1>Welcome to the Request Form</h1>

    <form method="post" asp-action="ListingForm" style="width: 600px;">

        <div asp-validation-summary="All"></div>
        <div class="form-group">
            <label asp-for="Name">Name:</label>
            <input asp-for="Name" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone:</label>
            <input asp-for="Phone" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email:</label>
            <input asp-for="Email" class="form-control"/>
        </div>
        <div style="padding-bottom: 20px;">
            <label asp-for="Role">Role:</label>
            <select asp-for="Role" class="form-control">
                <option value="Student">student</option>
                <option value="Professor">professor</option>
            </select>
        </div>
        <div>
            <label asp-for="Equipment">Equipment:</label>
            <select asp-for="Equipment" class="form-control">
                <option value="laptop">Laptop</option>
                <option value="phone">Phone</option>
                <option value="tablet">Tablet</option>
                <option value="other">Other</option>
            </select>
        </div>

        <div class="form-group">
            <label asp-for="RequestDetails">Request Details:</label>
            <input asp-for="RequestDetails" class="form-control"/>
        </div>

        <div>
            <label asp-for="Duration">Duration:</label>
            <select asp-for="Duration" class="form-control">
                <option value="One Week">One Week</option>
                <option value="Two Weeks">Two Weeks</option>
                <option value="One Month">One Month</option>
                <option value="Longer than one month">Longer than one month</option>
            </select>
        </div>
 
        <button class="btn btn-primary center-block spacing" type="submit">Submit</button>
    </form>
</body>
</html>